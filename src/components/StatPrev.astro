---
interface Props {
  image?: string;
  texte: string;
  titre: string;
}

const { image, texte, titre } = Astro.props;
---

<div class="flex flex-col justify-around min-h-48">
  <h3 class="text-white">{titre}</h3>
  <hr class="border-2 w-full border-white" />
  <div class="flex flex-row justify-between">
    <p class="text-white">{texte}</p>
    <img src={image} alt={titre} class="w-16 h-16" />
  </div>
  <hr class="border-2 w-full border-white" />
</div>
