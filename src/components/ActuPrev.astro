---
interface Props {
  date?: string;
  image?: string;
  texte?: string;
  titre: string;
}

const { date, image, texte, titre } = Astro.props;
---

<div
  class="p-2 md:p-4 m-2 md:m4 bg-slate-300 rounded-lg shadow shadow-slate-500 md:shadow-lg md:shadow-slate-500 flex flex-col md:flex-row justify-around items-start"
>
  <div class="flex flex-col md:w-2/3 order-1 md:order-2">
    <h3 class="mb-2 md:mb-8">{titre}</h3>
    <p>{texte}</p>
  </div>
  <img
    src={image}
    alt={titre}
    class="w-full md:w-1/3 md:mr-4 h-64 object-cover rounded-xl shadow shadow-slate-500 md:shadow-lg md:shadow-slate-500 order-2 md:order-1"
  />
</div>
