---
import { entreprise } from "../js/appelleAPI.js";

const entrepriseInstance = await entreprise();
---

<div class="flex lg:flex-row my-8">
  <div
    class="lg:px-16 bg-slate-800 rounded-3xl shadow-lg shadow-slate-700 lg:w-2/3 lg:mr-0"
  >
    <h2 class="text-white p-4">NOTRE GROUPE</h2>
    <h4 class="text-white p-4">
      {entrepriseInstance.description}
    </h4>
  </div>
  <div class="lg:block hidden w-1/3 h-full -z-10">
    <img
      src={entrepriseInstance.banniere.url}
      alt="banniere de l'entreprise"
      class="object-cover shadow-lg shadow-slate-400 lg:-skew-x-12 lg:-ml-16 lg:rounded-none lg:rounded-br-xl h-full"
    />
  </div>
</div>
