      <img
        src={entrepriseInstance.logo.url}
        alt=`logo de ${entrepriseInstance.nom}`
        class="w-12 h-12 rounded-full"
      />
      <h1>{entrepriseInstance.nom}</h1>
    </div></a
  >
  <nav class="flex flex-col md:flex-row items-start md:items-center">
    <a
      href="/"
      class="px-2 lg:px-4 md:py-2 transform transition duration-300 hover:scale-[1.1] relative group"
      ><h2>Accueil</h2><span
        class="none md:absolute -bottom-1 left-0 w-0 h-[4px] bg-slate-700 transition-all group-hover:w-full md:-skew-x-12"
      ></span></a
    >
    <a
      href="/groupe/"
      class="px-2 lg:px-4 md:py-2 transform transition duration-300 hover:scale-[1.1] relative group"
